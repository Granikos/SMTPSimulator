<!DOCTYPE html>
<html ng-app="Hydra" ng-controller="LandingPageController" ng-init="auth.user = '@ViewBag.Username'">
<head>
    <base href="/">
    <title>Hydra</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/bootstrap-dialog.min.css">
    <link rel="stylesheet" href="~/Content/ui-grid-unstable.css">
    @Styles.Render("~/Content/css")
    <script src="~/Scripts/jquery-2.1.3.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/angular-route.js"></script>
    <script src="~/Scripts/angular-ui/ui-bootstrap-tpls.js"></script>
    <script src="~/Scripts/ui-grid-unstable.js"></script>
    <script src="~/Scripts/papaparse.min.js"></script>
    <script src="~/Scripts/bootstrap-dialog.min.js"></script>
    @Scripts.Render("~/Scripts/Hydra")
</head>
<body style="max-width: 1000px;">
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <ul class="nav navbar-nav navbar-left">
                <li><a class="navbar-brand" href="/">Hydra</a></li>
                <li><a href="/Server">Server</a></li>
                <li><a href="/LocalUsers">Local Users</a></li>
                <li><a href="/ExternalUsers">External Users</a></li>
                <li><a href="/Send">Send</a></li>
                <li><a href="/Recieve">Recieve</a></li>
                <li><a href="/Timer">Timer</a></li>
                <li><a href="/Logging">Logging</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li ng-show="auth.user"><a href="/logout">Logout</a></li>
                <li ng-show="!auth.user"><a href="/login">Login</a></li>
                <li ng-show="!auth.user"><a href="/register">Register</a></li>
            </ul>
            <p class="navbar-text navbar-right" ng-show="auth.user">Signed in as {{auth.user}}</p>
        </div>
    </nav>

    <div ng-view></div>
</body>
</html>
