<?xml version="1.0" encoding="utf-8"?>

<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  <appSettings>
    <add key="CertificateFolder" value="." />
    <add key="DataFolder" value="../../AppData" />
    <add key="UserTemplates" value="UserTemplates" />
    <add key="LogFolder" value="Logs" />
  </appSettings>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="Microsoft.Practices.Prism.PubSubEvents" publicKeyToken="31bf3856ad364e35"
                          culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-1.1.0.0" newVersion="1.1.0.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
  <system.serviceModel>
    <services>
      <service name="Granikos.Hydra.Service.ConfigurationService"
               behaviorConfiguration="ConfigurationServiceBehavior">
        <host>
          <baseAddresses>
            <add baseAddress="net.tcp://localhost:13339/service" />
          </baseAddresses>
        </host>
        <endpoint address=""
                  binding="netTcpBinding"
                  contract="Granikos.Hydra.Service.IConfigurationService" />
        <endpoint address="mex"
                  binding="mexTcpBinding"
                  contract="IMetadataExchange" />
      </service>
    </services>
    <bindings>
      <netTcpBinding>
        <binding sendTimeout="00:01:00"
                 maxReceivedMessageSize="2147483647"
                 maxBufferSize="2147483647" transferMode="Streamed">
          <security mode="None" />
          <readerQuotas maxDepth="2147483647" maxStringContentLength="2147483647"
                        maxArrayLength="2147483647" maxBytesPerRead="2147483647"
                        maxNameTableCharCount="2147483647" />
        </binding>
        <binding name="mexBinding" portSharingEnabled="true">
          <security mode="None" />
        </binding>
      </netTcpBinding>
    </bindings>
    <behaviors>
      <serviceBehaviors>
        <behavior name="ConfigurationServiceBehavior">
          <serviceMetadata />
          <serviceDebug includeExceptionDetailInFaults="False" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <serviceHostingEnvironment multipleSiteBindingsEnabled="true" />
  </system.serviceModel>
  <system.webServer>
    <modules runAllManagedModulesForAllRequests="true" />
  </system.webServer>
  <log4net>
    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="Logs/SystemLogs/Service/log.txt" />
      <datePattern value="yyyy-MM-dd" />
      <appendToFile value="true" />
      <rollingStyle value="Composite" />
      <maxSizeRollBackups value="10" />
      <maximumFileSize value="100KB" />
      <preserveLogFileNameExtension value="true" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
      </layout>
      <filter type="log4net.Filter.LoggerMatchFilter">
        <loggerToMatch value="bbv.Common.EventBroker" />
        <acceptOnMatch value="false" />
      </filter>
    </appender>
    <appender name="SMTPServerAppender" type="Granikos.Hydra.Core.Logging.HeaderOnceAppender, Granikos.Hydra.Core">
      <file value="Logs/ProtocolLogs/Receive/log.csv" />
      <datePattern value="yyyy-MM-dd" />
      <rollingStyle value="Composite" />
      <maxSizeRollBackups value="10" />
      <maximumFileSize value="100KB" />
      <preserveLogFileNameExtension value="true" />
      <appendToFile value="true" />
      <layout type="Granikos.Hydra.Core.Logging.CsvPatternLayout, Granikos.Hydra.Core">
        <header
          value="#Software: nikos two&#13;&#10;#Version: %version&#13;&#10;#Log-type: SMTP Receive Protocol Log&#13;&#10;#Date: %date&#13;&#10;#Fields: date-time,connector-id,session-id,sequence-number,local-endpoint,remote-endpoint,event,data,context&#13;&#10;" />
        <conversionPattern
          value="%date{O}%newfield%property{ConnectorId}%newfield%property{Session}%newfield%property{SequenceNumber}%newfield%property{LocalIP}%newfield%property{RemoteIP}%newfield%property{Type}%newfield%property{Message}%newfield%endrow" />
      </layout>
    </appender>
    <appender name="SMTPClientAppender" type="Granikos.Hydra.Core.Logging.HeaderOnceAppender, Granikos.Hydra.Core">
      <file value="Logs/ProtocolLogs/Send/log.csv" />
      <preserveLogFileNameExtension value="true" />
      <rollingStyle value="Composite" />
      <maxSizeRollBackups value="10" />
      <maximumFileSize value="100KB" />
      <datePattern value="yyyy-MM-dd" />
      <appendToFile value="true" />
      <layout type="Granikos.Hydra.Core.Logging.CsvPatternLayout, Granikos.Hydra.Core">
        <header
          value="#Software: nikos two&#13;&#10;#Version: %version&#13;&#10;#Log-type: SMTP Send Protocol Log&#13;&#10;#Date: %date&#13;&#10;#Fields: date-time,connector-id,session-id,sequence-number,local-endpoint,remote-endpoint,event,data,context&#13;&#10;" />
        <conversionPattern
          value="%date{ISO8601}%newfield%property{ConnectorId}%newfield%property{Session}%newfield%property{SequenceNumber}%newfield%property{LocalIP}%newfield%property{RemoteIP}%newfield%property{Type}%newfield%property{Message}%newfield%endrow" />
      </layout>
    </appender>
    <appender name="SMTPOtherAppender" type="Granikos.Hydra.Core.Logging.HeaderOnceAppender, Granikos.Hydra.Core">
      <file value="Logs/ProtocolLogs/Other/log.csv" />
      <preserveLogFileNameExtension value="true" />
      <rollingStyle value="Composite" />
      <maxSizeRollBackups value="10" />
      <maximumFileSize value="100KB" />
      <datePattern value="yyyy-MM-dd" />
      <appendToFile value="true" />
      <layout type="Granikos.Hydra.Core.Logging.CsvPatternLayout, Granikos.Hydra.Core">
        <header
          value="#Software: nikos two&#13;&#10;#Version: %version&#13;&#10;#Log-type: SMTP Other Protocol Log&#13;&#10;#Date: %date&#13;&#10;#Fields: date-time,connector-id,session-id,sequence-number,local-endpoint,remote-endpoint,event,data,context&#13;&#10;" />
        <conversionPattern
          value="%date{ISO8601}%newfield%property{ConnectorId}%newfield%property{Session}%newfield%property{SequenceNumber}%newfield%property{LocalIP}%newfield%property{RemoteIP}%newfield%property{Type}%newfield%property{Message}%newfield%endrow" />
      </layout>
    </appender>
    <root>
      <level value="ALL" />
      <appender-ref ref="RollingFileAppender" />
    </root>
    <logger name="SMTPServer" additivity="false">
      <level value="ALL" />
      <appender-ref ref="SMTPServerAppender" />
    </logger>
    <logger name="SMTPClient" additivity="false">
      <level value="ALL" />
      <appender-ref ref="SMTPClientAppender" />
    </logger>
    <logger name="SMTPOther" additivity="false">
      <level value="ALL" />
      <appender-ref ref="SMTPOtherAppender" />
    </logger>
  </log4net>
</configuration>